#!/usr/bin/env bash

set -ex

PROGRAM="${0##*/}"
die() {
  echo "==> $PROGRAM: $*" >&2
  exit 0
}

check() {
  for l in $(pacman -Qeq); do [[ $(echo $(find ~/{.config/{waybar,hypr},hyprs,.zshrc} -type f | xargs cat) | grep $l) ]] && [[ $l != "bat" ]] && [[ $(cat $0 | grep $l) ]]; done
  exit 0
}

case $1 in
  check) check;;
esac

sudo pacman -Sy --needed --noconfirm --asexplicit 2>/dev/null alsa-utils \
                                                              brightnessctl \
                                                              btop \
                                                              cliphist \
                                                              dmenu \
                                                              dunst \
                                                              fcitx5 \
                                                              fcitx5-chinese-addons \
                                                              fcitx5-configtool \
                                                              fcitx5-gtk \
                                                              fcitx5-pinyin-zhwiki \
                                                              fcitx5-qt \
                                                              fcitx5-rime \
                                                              feh \
                                                              figlet \
                                                              grim \
                                                              helix \
                                                              htop \
                                                              hyprland \
                                                              hyprpaper \
                                                              kdeconnect \
                                                              kitty \
                                                              mesa-utils \
                                                              neofetch \
                                                              nm-connection-editor \
                                                              nwg-bar \
